{
  "name": "Email Writer Assistant",
  "description": "AI-Powered email reply generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions":
    ["storage", "activeTab"],
  "host_permissions": [
      "http://localhost:8081/*",
      "*://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "js": [ "content.js"],
      "matches": ["*://mail.google.com/*"],
      "CSS":["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": ["*://mail.google.com/*" ]
    }
  ],
  "action": {
    "default_title": "Email Writer Assistant"
  }
}